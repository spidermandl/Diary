<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingBottom="5dip"
    android:background="@drawable/template_item_bg">
    
    <TextView 
        android:id="@+id/template_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:textStyle="bold"/>
    
    <TextView 
        android:id="@+id/template_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_below="@id/template_title"
        android:layout_alignLeft="@id/template_title"
        android:layout_alignParentBottom="true"
        android:textColor="#FFCD9C9C"
        android:textSize="10sp"/>
    
    <CheckBox 
        android:id="@+id/template_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:button="?android:attr/listChoiceIndicatorSingle"
        android:focusable="false" 
        android:clickable="true"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_sub_temp_selector"
    android:descendantFocusability="beforeDescendants" >
    
     <TextView 
        android:id="@+id/template_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:textColor="#FF000000"
        android:text="eeeeeeeee"/>
     

     <ImageView          
         android:id="@+id/edit_sub_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginRight="5dip"
         android:layout_centerVertical="true"
         android:src="@drawable/edit_sub_title"
         android:visibility="visible"/>
     
      <ImageView          
         android:id="@+id/del_sub_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginRight="5dip"
         android:layout_centerVertical="true"
         android:layout_alignTop="@id/template_sub_title"
         android:src="@drawable/delete_sub_title"
         android:visibility="invisible"/>
     
     <View 
         android:id="@+id/erase_line"
         android:layout_width="match_parent"
         android:layout_height="1dip"
         android:background="#FFCCCCCC"
         android:layout_centerVertical="true"
         android:layout_marginLeft="8dip"
         android:layout_toLeftOf="@id/del_sub_title"
         android:layout_marginRight="15dip"/>
          
     <View 
         android:layout_width="match_parent"
         android:layout_height="1dip"
         android:background="#FFCCCCCC"
         android:layout_alignParentBottom="true"/>
     
</RelativeLayout>

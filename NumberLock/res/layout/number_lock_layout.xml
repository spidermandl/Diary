<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_background" >

    <!-- 提示信息 -->

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/please_input_pwd"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    <!-- 密码显示框 -->

    <LinearLayout
        android:id="@+id/ll_pass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_info"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <cn.numberlock.widget.InputCircleView
            android:id="@+id/et_pwd1"
            android:layout_width="10dip"
            android:layout_height="10dip" />

        <cn.numberlock.widget.InputCircleView
            android:id="@+id/et_pwd2"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginLeft="15dp" />

        <cn.numberlock.widget.InputCircleView
            android:id="@+id/et_pwd3"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginLeft="15dp" />

        <cn.numberlock.widget.InputCircleView
            android:id="@+id/et_pwd4"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginLeft="15dp" />
    </LinearLayout>
    <!-- 数字键盘 -->

    <cn.numberlock.widget.NumericKeyboard
        android:id="@+id/nk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/ll_pass" />
    <!-- 底部布局 -->


     <!-- 忘记密码按钮 -->

     <TextView
         android:id="@+id/btn_number_forget"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/ll_pass"
         android:onClick="doClick"
         android:text="@string/number_forget" />
     <!-- 删除按钮 -->

     <TextView
         android:id="@+id/btn_passwd_backwards"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/ll_pass"
         android:text="@string/passwd_backwards"
         android:textColor="#FFFFFFFF"
         android:textStyle="bold"
         android:onClick="doClick" />

</RelativeLayout>